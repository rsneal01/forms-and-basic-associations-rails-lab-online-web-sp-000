<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.collection_select :genre_id, Genre.all, :id, :name %> 
  <br />

  <%= fields_for :notes do |notes_fields| %>
    <%= notes_fields.label :note %>
    <%= notes_fields.text_area :content %>
  <% end %>

  <input name="song[note_info][]" id="song_notes_1">
  <input name="song[note_info][]" id="song_notes_2"> 

  <%= f.submit %>
<% end %>


